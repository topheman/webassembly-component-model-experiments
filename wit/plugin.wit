package myrepl:plugin;

interface plugin {
  name: func() -> string;
  man: func() -> string;
  expected-args: func() -> option<s8>;
  run: func(payload: string) -> repl-result;
  record repl-result {
    color: option<string>,
    status: repl-status,
    output: option<string>,
  }

  enum repl-status {
    success,
    error,
    warning,
  }
}

world my {
  export plugin;
}
