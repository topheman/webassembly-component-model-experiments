{
  "name": "plugin-echo",
  "version": "0.1.0",
  "description": "Example echo plugin for WebAssembly Component Model REPL - demonstrates basic plugin API implementation in TypeScript",
  "license": "ISC",
  "author": "Christophe Rosset",
  "type": "module",
  "scripts": {
    "wit-types": "rm -rf ./src/types && jco types --world-name plugin-api --out-dir ./src/types ../../wit",
    "bundle": "rolldown ./src/component.ts --file ./dist/component.js",
    "componentize": "jco componentize ./dist/component.js --wit ../../wit --world-name plugin-api --out ./dist/component.wasm --disable http --disable random",
    "build": "npm run wit-types && npm run bundle && npm run componentize",
    "optimize": "jco opt ./dist/component.wasm -o ./dist/component-opt.wasm"
  },
  "dependencies": {
    "@bytecodealliance/componentize-js": "^0.18.2",
    "@bytecodealliance/jco": "^1.11.2",
    "rolldown": "^1.0.0-beta.19"
  }
}
